<UserControl x:Class="Framework.UserControlHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Framework"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="Image" Width="128" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"/>
        <TextBlock x:Name="TextBlock" Text="Text Here" Style="{DynamicResource TextBlockTitleStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Margin="10"/>
    </Grid>
</UserControl>
