<Window x:Class="Framework.WindowSelectUsbPort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Framework"
        mc:Ignorable="d"
        Title="WindowSelectUsbPort" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="TextBlockTitle" Text="Select usb port" Margin="0,0,0,5" Background="ForestGreen" Foreground="White" FontFamily="Segoe UI Light" FontSize="18" Grid.ColumnSpan="3"/>
        <ListBox x:Name="ListBoxPortName" Grid.ColumnSpan="3" Grid.Row="1"/>

        <Button Content="Cancel" Grid.Row="2" Grid.Column="2" Click="ButtonCancel_Click" IsCancel="True"/>
        <Button Content="Ok" Grid.Row="2" Grid.Column="1" Click="ButtonOk_Click"/>
    </Grid>
</Window>
