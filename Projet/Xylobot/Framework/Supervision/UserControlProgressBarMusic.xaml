<UserControl x:Class="Framework.UserControlProgressBarMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Framework"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" Loaded="UserControl_Loaded" DataContextChanged="UserControl_DataContextChanged">
    <Grid>
        <Rectangle x:Name="RectangleProgressFull" Fill="Blue" Opacity="0.4" StrokeThickness="0" Height="5" VerticalAlignment="Center"/>
        <Rectangle x:Name="RectangleProgress" Fill="Red" StrokeThickness="0" Height="8" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Ellipse x:Name="EllipseProgress" Fill="Red" StrokeThickness="0" Height="20" Width="20" Margin="145,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
